{
  "name": "fortibit",
  "version": "2.0.0",
  "description": "Password manager",
  "author": {
    "name": "Arkadiusz Półgęsek",
    "email": "arkadiusz.polgesek@gmail.com"
  },
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "ng serve -c web -o",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && electron-builder build --linux",
    "electron:windows": "node release-scripts/remove-files.js && npm run build:prod && electron-builder build --windows && node release-scripts/copy-files.js && makensis \"C:/Users/icema/Desktop/fortibit/Fortibit.nsi\"",
    "electron:mac": "npm run build:prod && electron-builder build --mac",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "e2e": "npm run build:prod && cross-env TS_NODE_PROJECT='e2e/tsconfig.e2e.json' mocha --timeout 300000 --require ts-node/register e2e/**/*.e2e.ts",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/cdk": "11.2.2",
    "@circlon/angular-tree-component": "11.0.4",
    "dexie": "3.0.3",
    "indexeddb-export-import": "2.1.2",
    "primeicons": "4.1.0",
    "primeng": "11.4.2",
    "zxcvbn": "4.4.2"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "12.0.0",
    "@angular-devkit/build-angular": "12.0.1",
    "@angular-eslint/builder": "2.0.2",
    "@angular-eslint/eslint-plugin": "2.0.2",
    "@angular-eslint/eslint-plugin-template": "2.0.2",
    "@angular-eslint/schematics": "2.0.2",
    "@angular-eslint/template-parser": "2.0.2",
    "@angular/animations": "12.0.1",
    "@angular/cli": "12.0.1",
    "@angular/common": "12.0.1",
    "@angular/compiler": "12.0.1",
    "@angular/compiler-cli": "12.0.1",
    "@angular/core": "12.0.1",
    "@angular/forms": "12.0.1",
    "@angular/language-service": "12.0.1",
    "@angular/platform-browser": "12.0.1",
    "@angular/platform-browser-dynamic": "12.0.1",
    "@angular/router": "12.0.1",
    "@ngx-translate/core": "12.1.2",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/node": "15.3.1",
    "@types/zxcvbn": "4.4.1",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.15.0",
    "conventional-changelog-cli": "2.1.1",
    "cross-env": "7.0.3",
    "electron": "13.1.4",
    "electron-builder": "22.10.5",
    "electron-rebuild": "2.3.5",
    "electron-reload": "1.5.0",
    "eslint": "7.22.0",
    "eslint-plugin-import": "2.22.1",
    "fs-extra": "10.0.0",
    "npm-run-all": "4.1.5",
    "rxjs": "6.6.3",
    "ts-node": "9.1.1",
    "typescript": "4.2.3",
    "wait-on": "5.3.0",
    "webdriver-manager": "12.1.8",
    "zone.js": "0.11.4"
  },
  "engines": {
    "node": ">=14.17.0"
  }
}
