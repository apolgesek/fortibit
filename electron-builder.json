{
  "asar": false,
  "productName": "fortibit",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    "!**/mock_data.json",
    "!.vscode",
    "!.github",
    "!build",
    "!release",
    "!release-scripts",
    "!renderer",
    "!e2e",
    "!.angular",
    "!*.md",
    "!*.json",
    "!.gitignore",
    "!.editorconfig",
    "product.json",
    "build/*.ico",
    "*.scpt",
    "assets",
    "renderer/preload.js"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "app/renderer",
      "filter": [
        "**/*"
      ]
    }
  ],
  "mac": {
    "target": [
      "dmg"
    ],
    "fileAssociations": {
      "ext": "fbit",
      "icon": "build/icon.icns"
    }
  },
  "dmg": {
    "title": "${productName}"
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
