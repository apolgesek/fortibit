{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "types": [
      "node"
    ],
    "paths": {
      "@shared-models/*": [
        "../shared-models"
      ]
    },
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "files": [
    "main.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
  ]
}