{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"module": "es2020",
		"baseUrl": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"target": "ES2022",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2022", "dom"],
		"paths": {
			"@shared-renderer/*": ["shared/*"],
			"@root/*": ["./*"]
		}
	},
	"exclude": ["node_modules", ".angular", "main"]
}
