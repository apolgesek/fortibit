{
  "productName": "fortibit",
  "directories": {
    "output": "release/"
  },
  "asar": false,
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!**/mock_data.json",
    "!node_modules",
    "!.vscode",
    "!.github",
    "!build",
    "!release",
    "!release-scripts",
    "!src",
    "!*.md",
    "!*.json",
    "!.gitignore",
    "!.editorconfig"
  ],
  "mac": {
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
